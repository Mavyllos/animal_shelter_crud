<div class="container-fluid rehome-head">
    <h1>Rehome a Pet</h1>
    <a href="/animals/" class="all-animals">Return to Pets</a>
    <br><br>
    {{#if error}}
    <div class="alert alert-danger">
      {{ error }}
    </div>
    {{/if}}
    <form method="POST" action="/animals" class="well">
        <div class="row">
            <div class="col-md-8">
                <div class="form-group">
                    <label for="title">Pet Name</label>
                    <input id="name" name="name" type="text" class="form-control" value="{{ animal.name }}">
                </div>
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    <label for="item">Kind of Pet</label>
                    <select id="kind" name="kind" type="text" class="form-control custom-select" value="{{ animal.kind }}" onchange='checkvalue(this.value)'>
                      <option selected disabled>Choose here</option>
                      <option value="Cat">Cat</option>
                      <option value="Dog">Dog</option>
                      <option value="Other">Other</option>
                    </select>
                    <input type="text" name="kind" id="pet-kind" class="form-control" style="display:none" value="{{ animal.pet_kind }}">
                </div>
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    <label for="item">Breed</label>
                    <input id="breed" name="breed" type="text" class="form-control" value="{{ animal.breed }}">
                </div>
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    <label for="item">Age</label>
                    <input id="age" name="age" type="text" min="0" max="20" class="form-control" value="{{ animal.age }}">
                </div>
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    <label for="item">Description</label>
                    <input id="description" name="description" type="text" class="form-control" value="{{ animal.description }}">
                </div>
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    <label for="image">Animal Image URL</label>
                    <input id="image_url" name="image_url" type="text" class="form-control" value="{{ animal.image_url }}">
                </div>
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    <button type="submit" class="btn btn-default" id="submitForm">Submit</button>
                </div>
            </div>
        </div>
    </form>
</div>
